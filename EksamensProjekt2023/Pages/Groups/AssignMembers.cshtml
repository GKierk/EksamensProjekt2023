@page
@model EksamensProjekt2023.Pages.Groups.AssignMembersModel
@{
}
<div class="form-control">
    <form method="post" asp-page-handler="OnPost">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var member in Model.AssignMembers)
            {
                <tr>
                    <td><label class="form-label">@member.UserProfile.FullName</label></td>
                    <td><input type="checkbox" asp-for="@member.IsMember" /></td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary" >Tildel Brugere</button>
    </form>
</div>
<p>(@Model.AssignMembers.Count)</p>