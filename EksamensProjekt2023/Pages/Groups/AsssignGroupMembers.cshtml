@page
@model EksamensProjekt2023.Pages.Groups.AsssignGroupMembersModel
@{
}

<div>
    <form method="post" class="form-control">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.assignMembers.Count; i++)
                {
                    <tr>
                        <td>@Model.assignMembers[i].UserProfile.FullName</td>
                        <td><input type="checkbox" asp-for="@Model.assignMembers[i].IsMember" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Tildel Brugere</button>
    </form>
</div>