@page
@model EksamensProjekt2023.Pages.User.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Register.FirstName">Fornavn</label>
                    <input type="text" asp-for="@Model.Register.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.Register.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Register.LastName">Efternavn</label>
                    <input type="text" asp-for="@Model.Register.LastName" class="form-control" />
                    <span asp-validation-for="@Model.Register.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Register.Email">Email Address</label>
                    <input type="text" asp-for="@Model.Register.Email" class="form-control" />
                    <span asp-validation-for="@Model.Register.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Register.Password">Password</label>
                    <input type="password" asp-for="@Model.Register.Password" class="form-control" />
                    <span asp-validation-for="@Model.Register.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Register.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="@Model.Register.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.Register.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>