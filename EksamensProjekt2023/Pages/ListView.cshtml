@page
@model EksamensProjekt2023.Pages.ListViewModel
@{
    ViewData["Title"] = "Administrator Dashboard";
}

<div class="listViewContainer">
    @* reusing Admin Panel styling since it repeats *@
    <div class="adminPanelSide">
        <div class="adminPanelSide_User">
            <img class="adminPanel_userImg" src="/img/userPlaceholder.png" alt="placeholder for logged in account">
            <h3 class="adminPanel_userName">Welcome User.Placeholder</h3>
        </div>
        <ul class="adminPanelSide_LinkContainer">
            <li class="adminPanelSide_LinkItem"><a href="AdminPanel">Home</a></li>
            <li class="adminPanelSide_LinkItem"><a href="ListView?page=groups">Groups</a></li>
            <li class="adminPanelSide_LinkItem"><a href="ListView?page=leaders">Leaders</a></li>
        </ul>
    </div>

    <h1> Page: @Model.pageName </h1>

    @if (Model.pageName == "groups")
    {
        <p>Scenario A</p>
    }
    else if (Model.pageName == "leaders")
    {
        <p>Scenario B</p>
    } 
    else 
    {
        <p>Default Scenario</p>
    }


</div>