@using Microsoft.AspNetCore.Identity;
@using EksamensProjekt2023.Models;
@inject SignInManager<UserProfile> SignInManager;
@inject UserManager<UserProfile> UserManager;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EksamensProjekt2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EksamensProjekt2023.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">EksamensProjekt2023</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav justify-content-end flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AdminPanel">Admin Panel</a>
                        </li>
                    </ul>
                    @{
                        if(SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);

                            if (user != null)
                            {
                                <ul class="navbar-nav justify-content-end flex-grow-1">
                                    <li class="nav-item">
                                        <p class="mb-0 nav-link text-dark">Velkommen @user.FullName</p>
                                    </li>
                                    <div class="dropdown">
                                        <a class="nav-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sales</a>

                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="/AdminPanel/ReadSale">Read Sales</a>
                                            <li><a class="dropdown-item" href="/AdminPanel/createRecord">Create New Sale</a></li>
                                            <li><a class="dropdown-item" href="/AdminPanel/UpdateSale">Update Sales</a>
                                        </ul>
                                    </div>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="/ListView?page=Groups">Groups </a>
                                    </li>
                                    <li class="nav-item mb-sm-1">
                                        <a class="nav-link text-dark" href="/ListView?page=Leaders">Leaders</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-page="/User/Logout" class="btn btn-primary">Logout</a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <ul class="navbar-nav justify-content-end flex-grow-1">
                                    <li class="nav-item">
                                        <a asp-page="/User/login" class="btn btn-primary">Login</a>
                                    </li>
                                    <li>
                                        <a asp-page="/User/Register" class="btn">Register</a>
                                    </li>
                                </ul>
                            }
                        }
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3 container-fluid">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>