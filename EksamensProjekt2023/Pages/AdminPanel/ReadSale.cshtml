@page
@model EksamensProjekt2023.Pages.AdminPanel.ReadSaleModel
@{
}

<div>
    <form method="get">
        <table class="table">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Salgs Oversigter</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserProfiles)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var record in Model.Records)
                            {
                                if (user.Id == record.UserProfile.Id)
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Dato</th>
                                                <th>Antal Tildelte Lodder</th>
                                                <th>Antal Solgte Lodder</th>
                                                <th>Antal MobilePay Salg</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@record.Date.Year</td>
                                                <td>@record.AmountGiven</td>
                                                <td>@record.AmountSold</td>
                                                <td>@record.MobilePayAmount</td>
                                                <td>
                                                    <a class="btn btn-primary" asp-page="/AdminPanel/AssignLotteryTickets" asp-route-RecordID="@record.RecordID">Tildel Lodder</a>
                                                    <a class="btn btn-primary" asp-page="/AdminPanel/UpdateSale" asp-route-RecordID="@record.RecordID">Opdater Salgs Tal</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
